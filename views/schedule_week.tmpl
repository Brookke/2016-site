{{define "content"}}

{{with .PageData}}

<div class="container">

<h1>Schedule for week commencing {{ (index .Dates 0).Format "Jan 02 2006" }}</h1>

{{ if .Table }}
<table>
	<thead>
		<tr>
			<th>Time</th>
			{{ range .Dates }}
			<th>{{ .Weekday }}</th>
			{{ end }}
		</tr>
	</thead>
	<tbody>
		{{ range .Table }}
			<tr>
				<td>{{ .Hour | printf "%02d" }}:{{ .Minute | printf "%02d" }}</td>
				{{ range .Cells }}
					{{ if ne .RowSpan 0 }}
					<td rowspan="{{ .RowSpan }}" title="{{ showDesc .Item }}">
						{{ showName .Item }}
					</td>
					{{ end }}
				{{ end }}
			</tr>
		{{ end }}
	</tbody>
</table>
{{ else }}
	<p>Nothing today</p>
{{ end }}

</div><!-- /.container -->

{{ end }}
{{ end }}

