{{define "content"}}
{{with .PageData}}

<!-- placeholder for current and next -->
<div class="container-fluid header-large current-next">
  <div class="container mobile-hide">
  </div>
</div>

<!-- schedule header -->
<div class="container-fluid bg-off-white">
  <div class="container p-3">
      <h1 class="display-4">Schedule</h1>
      <h4 class="muted">for {{week (index .Schedule.Dates 0)}}</h4>
    <nav aria-label="Related Schedules" class="row nav justify-content-between">
      {{if .PrevURL}}
        <a class="nav-link" href="{{url .PrevURL.Path}}">Previous week</a>
      {{end}}
      {{if .CurrURL}}
        <a class="nav-link" href="{{url .CurrURL.Path}}">Permalink</a>
      {{end}}
      {{if .NextURL}}
        <a class="nav-link" href="{{url .NextURL.Path}}">Next week</a>
      {{end}}
    </nav>
  </div>
</div>

<!-- schedule body -->
<div class="container-fluid bg-off-white">
  <div class="container">
  {{with .Schedule}}
  {{if .Table}}
  <div class="table schedule-table" style="width: 100%" >
    <div style="width: 100%">
      {{range .Table}}
        <table style="width: 14%; display: inline-block; vertical-align: top">
          <tr>
            <th>
              Time
            </th>
            <td>
              {{.Day.Weekday}} {{.Day.Format "02"}}
            </td>
          </tr>
          {{range .Cells}}
            <tr>
              <th>88:88</th>
              {{if ne .RowSpan 0}}
              <td rowspan="{{.RowSpan}}" class="schedule-timeslot schedule-blocks-{{.Item.Block}}" title="{{stripHTML .Item.Desc}}" style="display: table-cell;">
                {{if .Item.PageURL}}
                  <a href="{{url .Item.PageURL}}">{{.Item.Name}}</a>
                {{else}}
                  {{.Item.Name}}
                {{end}}
              </td>
              {{end}}
            </tr>
          {{end}}
        </td>
      {{end}}
    </div>
  </div>
  {{else}}
    <p>Nothing today</p>
  {{end}}

  </div><!-- /.container -->
</div>

{{end}}
{{end}}
{{end}}

