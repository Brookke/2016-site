{{define "content"}}

{{with .PageData}}

<div class="container">

<h1>Schedule for week commencing {{.StartDate.Format "Jan 02 2006"}}</h1>

<h2>Debug: all timeslots</h2>

{{if .Timeslots}}
<ul>
	{{ range .Timeslots }}
		<li>{{showName .}} ({{showStart .}} to {{showFinish .}})</li>
	{{ end }}
</ul>
{{else}}
	Nothing today
{{end}}

</div><!-- /.container -->

{{end}}
{{end}}

