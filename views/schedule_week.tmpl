{{define "content"}}
{{with .PageData}}

<!-- placeholder for current and next -->
<div class="container-fluid header-large current-next">
	<div class="container mobile-hide">
	</div>
</div>

<!-- schedule header -->
<div class="container-fluid bg-off-white">
	<div class="container">
		<div class="row">
			<h1>Schedule <small class="muted">for {{week (index .Schedule.Dates 0)}}</small></h1>
		</div>
		<nav aria-label="Related Schedules" class="row nav justify-content-between">
				<a class="nav-link" href="{{url .PrevURL}}">Previous week</a>
				<a class="nav-link" href="{{url .CurrURL}}">Permalink</a>
				<a class="nav-link" href="{{url .NextURL}}">Next week</a>
		</nav>
	</div>
</div>

<!-- schedule body -->
<div class="container">
{{with .Schedule}}
{{if .Table}}
<table class="table table-responsive">
	<thead>
		<tr>
			<th>Time</th>
			{{range .Dates}}
			<th>{{.Weekday}} {{.Format "02"}}</th>
			{{end}}
		</tr>
	</thead>
	<tbody>
		{{range .Table}}
			<tr>
				<th scope="row">{{.Hour | printf "%02d"}}:{{ .Minute | printf "%02d" }}</th>
				{{range .Cells}}
					{{if ne .RowSpan 0}}
					<td rowspan="{{.RowSpan}}" title="{{ showDesc .Item }}">
						{{if .Item.HasPage}}
							<a href="{{url .Item.GetPageURL}}">{{ showName .Item }}</a>
						{{else}}
							{{showName .Item}}
						{{end}}
					</td>
					{{end}}
				{{end}}
			</tr>
		{{end}}
	</tbody>
</table>
{{else}}
	<p>Nothing today</p>
{{end}}

</div><!-- /.container -->

{{end}}
{{end}}
{{end}}

