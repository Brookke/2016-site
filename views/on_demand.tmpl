{{define "title"}}{{.PageContext.ShortName}} | {{.PageContext.ODName}}{{end}}

{{define "open-graph"}}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@{{.PageContext.MainTwitter}}">
<meta name="twitter:creator" content="@{{.PageContext.MainTwitter}}">
<meta property="og:type" content="website">
<meta property="og:locale" content="en_GB">
<meta property="og:title" content="{{.PageContext.LongName}} | About">
<meta property="og:description" content="{{.PageContext.SiteDescription}}">
<meta property="og:image" content="{{.PageContext.FullURL}}{{url "/images/open_graph-general.jpg"}}">
<meta property="og:url" content="{{.PageContext.FullURL}}{{url "/about/"}}">
{{end}}

{{define "content"}}
<div class="container-fluid on-demand">
  <div class="container container-padded">
    <div class="row align-items-center text-center">
      <div class="col">
        <h1 class="display-3">{{.PageContext.ShortName}} {{.PageContext.ODName}}</h1>
        <h2 class="display-5">Refreshing content when you need it the most.</h2>
      </div>
    </div>
  </div>
</div>
<div id="index-just-missed" class="container-fluid container-padded bg-primary pb-0">
  <h2>You Just Missed...</h2>
  <div class="row scroll-horiz custom-scrollbar pb-3">
    {{range .PageData.LatestTimeslots}}
    <div class="col-8 col-sm-5 col-md-4 col-lg-3 col-xl-2">
      <a class="show-card" href="/schedule/shows/timeslots/{{.TimeslotID}}/">
        <img class="show-card-img" src="
            {{if .Season.ShowMeta.Photo}}
            https://ury.org.uk{{.Season.ShowMeta.Photo}}
            {{else}}
              /images/show-current.png
            {{end}}
          " alt="{{.Title}} Logo">
        <div class="show-card-body">
          <h5 class="show-card-title">{{.Title}}</h5>
          <span class="show-card-date">{{.StartTime.Format "15:04 - Mon 2 Jan"}} â€¢ {{formatDuration .Duration}}</span>
        </div>
      </a>
    </div>
    {{end}}
  </div>
</div>
<div id="index-videos" class="container-fluid container-padded bg-secondary">
  <div class="row">
    <div class="col-12 col-md-8">
      <h2>{{.PageContext.ShortName}} on Youtube</h2>
    </div>

  </div>
  <h2> </h2>
  <div id="youtube-video-slider" class="row pb-3 youtube-grid">
  </div>
  <div class="row justify-content-end">
    <div class="col">
        <a href="{{.PageContext.Youtube.ChannelURL}}" class="btn btn-primary-inverse btn-sm float-right" title="View All Podcasts">View all Videos</a>
      </div>
    </div>
</div>
{{if .PageData.LatestPodcasts}}
<div id="index-podcasts" class="container-fluid container-padded bg-third">
  <div class="row">
    <div class="col-12 col-md-8">
      <h2>Latest Podcasts</h2>
    </div>
    <div class="col-12 col-md-4">
      <a href="/podcasts/" class="btn btn-primary-inverse btn-sm float-right" title="View All Podcasts">View all Podcasts</a>
    </div>
  </div>
  <div class="row scroll-horiz pb-3 custom-scrollbar">
      {{range .PageData.LatestPodcasts}}
          <div class="col-11 col-sm-6 col-lg-4">
            <div class="row bg-primary m-1 uryplayer-podcast">
              <div class="col-md-4 p-0">
                <img class="card-img-top img-fluid p-0" src="https://ury.org.uk{{.Photo}}" alt="URY Podcast: {{.Title}}">
              </div>
              <div class="col-md-8">
                <div class="card-block">
                  <h4 class="card-title ellipsis"><a href="{{.MicrositeLink.URL}}" title="URY Podcast: {{.Title}}">{{.Title}}</a></h4>
                  <h5>{{.Time.Format "Monday, _2 Jan 2006"}}</h5>
                  <div class="podcast-description card-text ellipsis">
                    <p>{{html .Description}}</p>
                  </div>
                  <a href="{{.MicrositeLink.URL}}" title="URY Podcast: {{.Title}}">Listen Now</a>
                </div>
              </div>
            </div>
          </div>
      {{end}}
  </div>
</div>
{{end}}
{{end}}

{{define "footer-scripts"}}
<!-- Youtube slider script -->
<script>
var youtubeAPIKey = {{.PageContext.Youtube.APIKey}};
var youtubePlaylistID = "{{.PageContext.Youtube.PlaylistID}}";
</script>
<script src='{{url "/js/index.js"}}'></script>
<script src="https://apis.google.com/js/client.js?onload=onGoogleLoad"></script>
{{end}}
