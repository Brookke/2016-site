{{define "current_and_next"}}
	{{with .CurrentAndNext}}
		{{if .Current}}
			{{template "current_next" .Current}}
		{{end}}
		{{if .Next}}
			{{template "current_next" .Next}}
		{{end}}
	{{end}}
{{end}}

{{define "current_next"}}

<p>
	<a href="{{.Url}}">{{.Title}}</a><br>
	{{.StartTime.Format "15:04"}} - {{.EndTime.Format "15:04"}}
</p>

{{end}}
