{{define "current_and_next"}}
	{{with .CurrentAndNext}}
		<div class="current-and-next">
			{{if .Current}}
				<img class="current-and-next-img" src="/images/show-current.png" alt="" />
				<div class="current-and-next-now">
					<h2>Now</h2>
					{{template "current_next" .Current}}
				</div>
				{{if .Next}}
				<div class="current-and-next-next">
					<h2>Next</h2>
					{{template "current_next" .Next}}
				</div>
				{{end}}

			{{end}}
		</div>

	{{end}}
{{end}}

{{define "current_next"}}

<h3><a href="{{.Url}}">{{.Title}}</a></h3>
<h4>{{.StartTime.Format "15:04"}} - {{.EndTime.Format "15:04"}}</h4>

{{end}}
