{{define "current_and_next"}}
	{{with .CurrentAndNext}}

		<div class="row">
			{{if .Current}}
				<div class="current-next-live mobile-col-left mobile-hide">
					<img id="current-next-live" src="/images/show-current.png" alt="" />
					<a href="https://ury.org.uk/listen" class="btn btn-lg btn-primary mobile-hide current-next-live-button" title="Listen Live" onclick="window.open('http://ury.org.uk/live', 'radioplayer', 'height=665,width=380'); return false;">Listen Live</a>
				</div>
				<div class="row desktop-right">
					
						<div class="col-xs-4 current-next-live mobile-col-left mobile-only">
							<div class="float-bottom">
								<img id="current-next-live" src="/images/show-current.png" alt="" />
							</div>
						</div>
					<div id="current-next-now" class="col-xs-8 col-sm-6 current-next-now mobile-col-right">
						<h2>Now</h2>
						{{template "current_next" .Current}}
					</div>

			{{end}}
			{{if .Next}}
					<div id="current-next-next" class="col-xs-12 col-sm-6 current-next-next">
					 	<h2 class="mobile-col-left">Next</h2>
					 	<div class="mobile-col-right">
							{{template "current_next" .Next}}
						</div>
					</div>
				
			{{end}}
				<a href="" class="btn btn-lg btn-primary current-next-live-button-mobile" alt="Listen Live">Listen Live</a>
				</div>
		</div>

	{{end}}
{{end}}

{{define "current_next"}}

<h3><a href="{{.Url}}">{{.Title}}</a></h3>
<h4>{{.StartTime.Format "15:04"}} - {{.EndTime.Format "15:04"}}</h4>

{{end}}
