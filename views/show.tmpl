{{define "content"}}
{{with .PageData}}

<div class="container">

	<h1>
		{{.Show.Title}}
	</h1>

	<p>
		{{html .Show.Description}}
	</p>

	<h2>
		Presenters
	</h2>
	<p>
		{{range .Show.Credits}}
			<a href="/people/{{.User.Memberid}}/">{{.User.Fname}} {{.User.Sname}}</a> <br>
		{{end}}
	</p>

	{{range .Seasons}}
	<p>
		{{.SeasonNum}} - {{.RequestedTime}}
	</p>
	{{end}}

</div><!-- /.container -->

{{end}}
{{end}}
