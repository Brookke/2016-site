{{define "title"}}{{.PageContext.ShortName}} | {{.PageContext.ODName}} | {{with .PageData}} {{.Podcast.Title}} {{end}} Podcast {{end}}


{{define "content"}}

{{with .PageData}}

	<div class="container-fluid header-large current-next">
  </div>
  <div class="container-fluid header-large section-title">
    <div class="container">
      <div class="row justify-content-end">
        <div class="col-12 col-lg-9">
          <h1 class="section-title-text">
              <div class="od-brand">((URY)) on Tap</div> Podcast
          </h1>
        </div>
      </div>
    </div>
  </div>
	<div class="container-fluid bg-off-white">
		<div class="container container-padded">
		  <div class="row">
	        <div class="col-12 col-lg-3">
	        	<img class="img-fluid show-img" src="
						{{if .Podcast.Photo}}
									https://ury.org.uk{{.Podcast.Photo}}
						{{else}}
									/images/podcast.png
						{{end}}

							" alt="{{.Podcast.Title}} Logo">
	        </div>
	        <div class="col-12 col-lg-9">
	          <h1>
	        	{{.Podcast.Title}}
            </h1>
            <h3>
              Published on {{.Podcast.Time.Format "Monday, _2 Jan 2006"}}
            </h3>
	          <hr>
				  	<h2>Description</h2>
            <p>
						  {{html .Podcast.Description}}
            </p>
            {{template "podcast_player" .}}
	        </div>
	      </div>
	    </div>
	  </div>
  </div>

{{end}}
{{end}}
